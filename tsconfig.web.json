{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/web/*"]
    }
  },
  "include": ["src/web/**/*.ts", "src/web/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "src/bot", "src/types", "src/utils", "src/ml", "src/tasks", "src/config", "src/error", "src/commands", "src/tools", "src/schema", "src/storage", "src/llm"]
} 