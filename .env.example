# Server Configuration
NODE_ENV=development
PORT=3000

# Minecraft Bot Configuration
MINECRAFT_HOST=localhost
MINECRAFT_PORT=25565
MINECRAFT_USERNAME=bot
MINECRAFT_PASSWORD=  # Optional: Only needed for online mode servers
MINECRAFT_VERSION=1.20.4

# Ollama LLM Configuration
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=''  # or any other model you want to use

# Storage Configuration
STORAGE_PATH=./data
MAX_PROGRESS_AGE=604800000  # 7 days in milliseconds
MAX_COMPLETED_AGE=2592000000  # 30 days in milliseconds
CLEANUP_INTERVAL=86400000  # 24 hours in milliseconds
MAX_PROGRESS_HISTORY=1000

# Web Dashboard Configuration
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=  # Set a secure password in production

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json or text
LOG_FILE=./logs/bot.log

# Feature Flags
ENABLE_AUTO_EAT=true
ENABLE_AUTO_COLLECT=true
ENABLE_PATHFINDING=true
ENABLE_LLM=true